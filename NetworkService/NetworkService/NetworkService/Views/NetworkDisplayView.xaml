                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line 
                                X1="{Binding X1}" 
                                Y1="{Binding Y1}" 
                                X2="{Binding X2}" 
                                Y2="{Binding Y2}" 
                                Stroke="#7289da" 
                                StrokeThickness="3" 
                                StrokeStartLineCap="Round" 
                                StrokeEndLineCap="Round"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </StackPanel>
    </Grid>
</UserControl>
