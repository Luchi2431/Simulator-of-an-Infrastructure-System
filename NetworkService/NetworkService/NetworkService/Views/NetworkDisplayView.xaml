                        BorderThickness="0"
                        ToolTip="List view"
                        x:Name="listViewEntityList" 
                        SelectedItem="{Binding SelectedEntity}" 
                        Template="{StaticResource RoundedListViewTemplate}">
                        <ListView.Resources>
                            
                            <CollectionViewSource x:Key="groupedEntities"
                                  Source="{Binding EntitiesInList}">
                                
                                <CollectionViewSource.GroupDescriptions>
                                    <PropertyGroupDescription PropertyName="Type.Type" />
                                </CollectionViewSource.GroupDescriptions>
                                
                            </CollectionViewSource>
                            
                            <GroupStyle x:Key="groupStyle">
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                            Text="{Binding Name}"
                                            FontWeight="Bold"
                                            Foreground="#fff"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.Resources>

                        <ListView.GroupStyle>
                            <StaticResource ResourceKey="groupStyle" />
                        </ListView.GroupStyle>
                        
                        <ListView.ItemsSource>
                            <Binding Source="{StaticResource groupedEntities}" />
                        </ListView.ItemsSource>
                        
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Cursor="Hand">
                                    <TextBlock Text="{Binding Name}" Foreground="#fff"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding Type.Type}" Foreground="#fff"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding Value}" Foreground="#fff"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction 
                                    Command="{Binding SelectionChanged}"
                                    CommandParameter="{Binding ElementName=listViewEntityList}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction 
                                    Command="{Binding MouseLeftButtonUp}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        
